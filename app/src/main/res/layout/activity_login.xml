<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.authorization.LoginActivity">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/start"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clipToPadding="true"
        android:background="#FFFFFF">

        <View
            android:id="@+id/screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/screen">

        </View>



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50dp">


                <TextView
                    android:id="@+id/discover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/discover"
                    android:textAppearance="@style/discover"
                    android:gravity="center_horizontal" />


                <AutoCompleteTextView
                    android:id="@+id/username"
                    android:layout_width="265dp"
                    android:layout_height="41dp"
                    android:layout_marginTop="35dp"
                    android:alpha="0.7"
                    android:hint="@string/username"
                    android:shadowColor="@color/white"
                    android:textAppearance="@style/username"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />



                <EditText
                    android:backgroundTint="@color/white"
                    android:id="@+id/password"
                    android:layout_width="265dp"
                    android:layout_height="41dp"
                    android:hint="@string/password"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:alpha="0.7"
                    android:shadowColor="@color/white"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />


                <Button
                    android:id="@+id/login_button"
                    android:layout_marginTop="35dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/login"
                    android:textSize="18sp"
                    android:background="@drawable/login"
                    android:visibility="visible" />
                <TextView
                    android:id="@+id/forgot_password"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="@string/forgot_password"
                    android:textAppearance="@style/create_acco"
                    android:gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/create_acco"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/create_acco"
                    android:textAppearance="@style/create_acco"
                    android:gravity="center_horizontal"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/facebook_sign_in"
                        android:layout_width="21dp"
                        android:layout_height="20dp"


                        android:background="@drawable/facebook_img"
                        android:visibility="visible" />


                    <Button
                        android:id="@+id/google_sign_in"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="20dp"

                        android:background="@drawable/google_img"
                        android:visibility="visible" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>





    </RelativeLayout>

</LinearLayout>