<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.authorization.VerificationActivity">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/start"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clipToPadding="true"
        android:background="#FFFFFF"
        tools:ignore="MissingConstraints">

        <View
            android:id="@+id/screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/screen">
        </View>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="19dp">


                <TextView
                    android:id="@+id/discover"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/discover"
                    android:textAppearance="@style/discover"
                    android:gravity="center_horizontal"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"

                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/phoneView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/phone"

                            android:textColor="@color/white"
                            android:singleLine="true"
                            android:textSize="20sp" />
                        <View
                            android:id="@+id/lineForPhoneView"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/white"


                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="55dp"
                        android:layout_marginStart="55dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/emailView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/emailView"
                            android:textColor="@color/white"
                            android:textSize="20sp" />
                        <View
                            android:id="@+id/lineForEmailView"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/white"
                            android:visibility="gone"
                            />
                    </LinearLayout>

                </LinearLayout>

                <EditText
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:id="@+id/phone"
                    android:layout_width="265dp"
                    android:layout_height="41dp"
                    android:hint="@string/phoneNumber"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:alpha="0.7"
                    android:shadowColor="@color/white"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />

                <EditText
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:id="@+id/email"
                    android:layout_width="265dp"
                    android:layout_height="41dp"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:alpha="0.7"
                    android:shadowColor="@color/white"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/massageVerific"
                    android:layout_width="fill_parent"
                    android:layout_height="43dp"
                    android:layout_marginLeft="2dp"
                    android:alpha="0.7"
                    android:text="@string/textPhoneForVerification"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/next_button_verification"
                    android:layout_marginTop="15dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/next"
                    android:textSize="18sp"
                    android:background="@drawable/login"
                    android:visibility="visible"
                    />


            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>