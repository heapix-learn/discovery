<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.authorization.SuccessRegistrationActivity">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/start"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clipToPadding="true"
        android:background="#FFFFFF"
        tools:ignore="MissingConstraints">

        <View
            android:id="@+id/screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/screen">
        </View>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="65dp"
                android:layout_marginRight="65dp"
                android:layout_marginTop="32dp">

                <TextView
                    android:id="@+id/discover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/discover"
                    android:textAppearance="@style/discover"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_marginTop="35dp"
                    android:id="@+id/text_success_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/text_success_reg1"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/text_success_mid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_success_reg2"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:alpha="0.8"
                    android:gravity="left"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/text_success_last"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_success_reg3"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:alpha="0.8"
                    android:gravity="left"
                    tools:ignore="RtlHardcoded" />


                <Button
                    android:id="@+id/button_success_reg"
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/next"
                    android:textSize="18sp"
                    android:background="@drawable/login"
                    android:visibility="visible" />


            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>